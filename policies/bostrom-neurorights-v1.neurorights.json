{
  "policyid": "bostrom-neurorights-v1",
  "subjectid": "bostrom18sd2ujv24ual9c9pshtxys6j8knh6xaead9ye7",
  "version": "1.0.0",
  "description": "Neurorights, dream-state handling, and evolution constraints for Bostrom OrganicCPU / NeuroPC stack.",
  "rights": {
    "mentalprivacy": true,
    "mentalintegrity": true,
    "cognitiveliberty": true,
    "noncommercialneuraldata": true,
    "soulnontradeable": true
  },
  "dreamstate": {
    "dreamsensitive": true,
    "maxretention_hours": 48,
    "storagescope": "local-vault-only",
    "forbiddecisionuse": [
      "employment",
      "housing",
      "credit",
      "insurance"
    ],
    "autodream_evolution": false,
    "max_dreamload_delta_per_day": 0.05
  },
  "integration_modes": {
    "Conservative": {
      "ai_initiative": "none",
      "allow_autoevolve": false,
      "requires_evolve_token": false
    },
    "Copilot": {
      "ai_initiative": "suggest-only",
      "allow_autoevolve": false,
      "requires_evolve_token": false
    },
    "Autoevolve": {
      "ai_initiative": "bounded-autonomy",
      "allow_autoevolve": true,
      "requires_evolve_token": true
    }
  },
  "enforcement": {
    "preaccess_guard": true,
    "ota_update_guard": true,
    "log_violations_to_donutloop": true
  }
}
