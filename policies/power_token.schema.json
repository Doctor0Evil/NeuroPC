{
  "$schema": "https://neuro.pc/schemas/power_token.schema.json",
  "type": "object",
  "required": ["id", "subject_id", "per_turn_caps", "valid_from", "valid_until", "revocable"],
  "properties": {
    "id": { "type": "string" },
    "subject_id": { "type": "string" },
    "per_turn_caps": {
      "type": "object",
      "properties": {
        "max_actions": { "type": "integer", "maximum": 5 },
        "max_compute_cycles": { "type": "integer", "maximum": 100000 },
        "max_memory_kb": { "type": "integer", "maximum": 512 }
      },
      "required": ["max_actions"]
    },
    "valid_from": { "type": "string", "format": "date-time" },
    "valid_until": { "type": "string", "format": "date-time" },
    "revocable": { "type": "boolean" }
  },
  "additionalProperties": false
}
