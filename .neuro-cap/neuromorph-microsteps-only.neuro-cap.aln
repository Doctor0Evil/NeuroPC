meta
  subjectid bostrom18sd2ujv24ual9c9pshtxys6j8knh6xaead9ye7
  version 1.0.0
  description Neuromorph microsteps_only capability descriptor; actuation forbidden.

capability
  id neuromorph-microsteps-only
  kind neuromorph_scope
  microsteps_only true
  can_propose_evolve true
  can_write_config false
  can_call_syscalls false
  can_actuate_devices false
  require_tsafemode TsafeNeuromorph
  reason_code_on_violation NEUROMORPH_ACTUATION_FORBIDDEN

grammatical_constraints
  # RoH monotonicity is a syntactic rule, not a comment.
  rule roh_transition:
    pattern "roh_after" "roh_before"
    constraint "roh_after <= roh_before"
  rule roh_ceiling:
    pattern "roh_after"
    constraint "roh_after <= 0.30"
  rule envelope_monotone:
    pattern "envelope_param_new" "envelope_param_old"
    constraint "envelope_param_new <= envelope_param_old"
