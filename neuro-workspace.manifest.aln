meta:
  manifestid: neuro-workspace-v1
  version: 1.0.0
  subjectid: bostrom18sd2ujv24ual9c9pshtxys6j8knh6xaead9ye7
  description: NeuroPC / Organic_CPU sovereign shell manifest for this repository.

paths:
  qpudataroot: qpudatashardsparticles
  policiesroot: policies
  logsroot: logs
  cratesroot: crates

coreshards:
  rohmodel: qpudatashardsparticles/bostrom-rohmodel-v1.rohmodel.aln
  stake: qpudatashardsparticles/bostrom-stake-v1.stake.aln
  neurorights: policies/bostrom-neurorights-v1.neurorights.json
  smartpolicy: policies/bostrom-smart-2026-01.smart.json
  evolvestream: sovereignty/evolve/evolve-2026-02.evolve.jsonl
  donutloop: logs/donutloopledger.aln

  organiccpu_profile: organicspecs/OrganicCpuNeuroProfile2026v1.ocpu
  organiccpu_env: organicspecs/OrganicCpuPainEnvelope2026v1.ocpuenv
  organiccpu_runtime_metrics: qpudatashardsparticles/OrganicCpuRuntimeMetrics2026v1.aln
  organiccpu_qpu_shard: qpudatashardsparticles/OrganicCpuQpuShard2026v1.aln

invariants:
  rohceiling: 0.30
  rohmonotone: true         # Require roh_after <= roh_before for Allowed decisions.
  envmonotone: true         # Envelopes may tighten but not loosen.
  dreamnocomm: true         # Dream/neural data is strictly non-commercial.
  nondiscriminate: true     # Forbid dream/neural data in employment/housing/credit/insurance.

  # Neurorights expectations; sovereigntycore must enforce from neurorights JSON.
  neurorights_required_flags:
    - noncommercialneuraldata
    - soulnontradeable
    - dreamstate.dreamstatesensitive
    - forbiddecisionuse

stakerequirements:
  lifeforcescope:
    description: Changes to lifeforce envelopes, integrity budgets, or pain limits.
    requiredroles:
      - Host
      - OrganicCPU
    tokenkinds:
      - EVOLVE
    multisigrequired: true

  archscope:
    description: Core kernel architecture and sovereigntycore behavior changes.
    requiredroles:
      - Host
      - OrganicCPU
      - ResearchAgent
    tokenkinds:
      - EVOLVE
    multisigrequired: true

  tuningscope:
    description: Day-to-day tuning (motormacros, language style, heuristic tweaks).
    requiredroles:
      - Host
    tokenkinds:
      - SMART
      - EVOLVE
    multisigrequired: false

guardpipeline:
  order:
    - stakeguard
    - neurorightsguard
    - rohguard
    - envelopeguard
    - tokenguard
    - logtoevolveanddonutloop
