aln
meta
  subjectid bostrom18sd2ujv24ual9c9pshtxys6j8knh6xaead9ye7
  version 1.0.0
  description Tsafe / viability kernel polytopes over biophysical state.
  kind vkernel
stateaxes
  # All axes normalized to [0.0, 1.0]
  - name intensity          range 0.0, 1.0
  - name dutycycle          range 0.0, 1.0
  - name cumulativeload     range 0.0, 1.0
  - name implantpower       range 0.0, 1.0
  - name neuromodamplitude  range 0.0, 1.0
  - name cognitiveload      range 0.0, 1.0
  - name legalcomplexity    range 0.0, 1.0
  - name lifeforce          range 0.0, 1.0
modes
  - id Rehab
    description Conservative viability kernel for rehab mode.
    # A x <= b rows; all coefficients in [-10.0, 10.0], b >= 0.
    constraints
      - a intensity 1.0 dutycycle 0.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce 0.0
        b 0.4
      - a intensity 0.0 dutycycle 1.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce 0.0
        b 0.3
      - a intensity 0.0 dutycycle 0.0 cumulativeload 1.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce 0.0
        b 0.5
      - a intensity 0.0 dutycycle 0.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce -1.0
        b -0.4   # lifeforce >= 0.4
  - id Baseline
    description Default viability kernel for baseline operation.
    constraints
      - a intensity 1.0 dutycycle 0.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce 0.0
        b 0.6
      - a intensity 0.0 dutycycle 1.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce 0.0
        b 0.5
      - a intensity 0.0 dutycycle 0.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 1.0 legalcomplexity 0.0 lifeforce 0.0
        b 0.7
      - a intensity 0.0 dutycycle 0.0 cumulativeload 0.0 implantpower 0.0 neuromodamplitude 0.0 cognitiveload 0.0 legalcomplexity 0.0 lifeforce -1.0
        b -0.3   # lifeforce >= 0.3
invariants
  - name axes_normalized
    rule All stateaxes ranges must be within [0.0, 1.0].
  - name coeff_bounded
    rule For every constraint row, all a coefficients are in [-10.0, 10.0] and b >= 0.0 except for lifeforce lower-bound rows where a_lifeforce < 0 and b <= 0.
  - name lifeforce_minimum
    rule Every mode must contain at least one constraint encoding a minimum lifeforce (a_lifeforce < 0.0).
